<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF7EE"
    tools:context=".HomeActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etFind"
                android:layout_width="294dp"
                android:layout_height="46dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="52dp"
                android:background="@drawable/find_custom"
                android:drawableLeft="@drawable/icon_find"
                android:drawablePadding="20dp"
                android:paddingLeft="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="28dp"
                android:src="@drawable/icon_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/etFind"
                app:layout_constraintTop_toTopOf="parent" />

            <HorizontalScrollView
                android:id="@+id/horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etFind">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/hsv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"

                        android:src="@drawable/hsv_1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/hsv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:src="@drawable/hsv_2"

                        app:layout_constraintStart_toEndOf="@id/hsv_1"
                        app:layout_constraintTop_toTopOf="@id/hsv_1" />

                    <ImageView
                        android:id="@+id/hsv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/hsv_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/hsv_2"
                        app:layout_constraintTop_toTopOf="@id/hsv_2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontal">

                <ImageView
                    android:id="@+id/sp_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/sp_1" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sp_1"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="latte"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/sp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/sp_1"
                    android:src="@drawable/sp_2" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sp_2"
                    android:layout_marginStart="30dp"
                    android:layout_toRightOf="@id/textView1"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="espresso"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/sp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView1"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/sp_3" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sp_3"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="cappuccino"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/sp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/sp_3"
                    android:layout_toRightOf="@id/sp_3"
                    android:src="@drawable/sp_4" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sp_4"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/textView3"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="latte"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/sp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView3"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/sp_5" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sp_5"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="cappuccino"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/sp_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView4"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/sp_5"
                    android:layout_toRightOf="@id/sp_5"
                    android:src="@drawable/sp_6" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sp_6"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/textView5"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="latte"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/sp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView5"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"

                    android:src="@drawable/sp_7" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sp_8"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="espresso"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/sp_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView6"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/sp_8"
                    android:layout_toRightOf="@id/sp_8"
                    android:src="@drawable/sp_8" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sp_9"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toRightOf="@id/textView8"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="latte"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="280dp"
            android:layout_height="54dp"
            android:background="@drawable/find_custom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/icon_homee"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/icon_favorite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivHome"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivMenuCoffee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/icon_menu_cf"
            android:onClick="onMenuCoffeeClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivFavorite"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/icon_person"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivMenuCoffee"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
