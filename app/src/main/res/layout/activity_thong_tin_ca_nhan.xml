<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ThongTinCaNhanActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập Thông Tin Cá Nhân"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/header_fragment"
        android:fontFamily="@font/baloo2_medium"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:id="@+id/edtTenTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/custom_et"
        android:hint="Họ và Tên"
        android:paddingLeft="15dp"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edtSdt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/custom_et"
        android:hint="Số điện thoại"
        android:paddingLeft="15dp"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edtDiaChi"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@drawable/custom_et"
        android:hint="Địa chỉ"
        android:paddingLeft="15dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/btnXacNhan"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_margin="30dp"
        android:background="@drawable/bg_button_corner_20"
        android:fontFamily="@font/baloo2_medium"
        android:gravity="center"
        android:text="Xác Nhận"
        android:textColor="@color/white"
        android:textSize="30sp" />


</LinearLayout>