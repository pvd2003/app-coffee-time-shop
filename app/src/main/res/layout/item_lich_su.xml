<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6F2901">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:fontFamily="@font/baloo2_medium"
                android:gravity="center"
                android:text="Đơn hàng của bạn"/>

        </RelativeLayout>


        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#E1D2A5">

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Ngày: 9/4/2022"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/tvTrangThai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Trạng thái: Đã thanh toán"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/tvTong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Tổng: 20000"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>